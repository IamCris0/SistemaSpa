@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h2 class="mb-4"><i class="bi bi-speedometer2"></i> Dashboard</h2>
    
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Clientes</h5>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-light btn-sm">Ver todos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-badge"></i> Empleados</h5>
                    <a asp-controller="Empleados" asp-action="Index" class="btn btn-light btn-sm">Ver todos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-star"></i> Servicios</h5>
                    <a asp-controller="Servicios" asp-action="Index" class="btn btn-light btn-sm">Ver todos</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box"></i> Productos</h5>
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-light btn-sm">Ver todos</a>
                </div>
            </div>
        </div>
    </div>
</div>
