@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="d-flex justify-content-between mb-3">
    <h2><i class="bi bi-people"></i> Clientes</h2>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus"></i> Nuevo Cliente</a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Tel√©fono</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ClienteID</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Email</td>
                        <td>@item.Telefono</td>
                        <td><span class="badge bg-success">@item.Estado</span></td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.ClienteID" class="btn btn-sm btn-info"><i class="bi bi-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.ClienteID" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.ClienteID" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
