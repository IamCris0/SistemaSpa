@model IEnumerable<SistemaSpaWeb.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-box-seam"></i> Gestión de Productos
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Producto
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Producto</th>
                            <th>Descripción</th>
                            <th>Marca</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Stock Mínimo</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model)
                        {
                            var stockBajo = (producto.Stock ?? 0) <= (producto.StockMinimo ?? 0);
                            <tr class="@(stockBajo ? "table-warning" : "")">
                                <td>@producto.ProductoID</td>
                                <td><strong>@producto.NombreProducto</strong></td>
                                <td>@(producto.Descripcion ?? "-")</td>
                                <td>@(producto.Marca ?? "-")</td>
                                <td><strong>$@(producto.PrecioUnitario?.ToString("N2") ?? "0.00")</strong></td>
                                <td>
                                    @if (stockBajo)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-triangle"></i> @(producto.Stock ?? 0)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@(producto.Stock ?? 0)</span>
                                    }
                                </td>
                                <td>@(producto.StockMinimo ?? 0)</td>
                                <td>
                                    <span class="badge @(producto.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                        @producto.Estado
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@producto.ProductoID"
                                       class="btn btn-sm btn-info" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@producto.ProductoID"
                                       class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@producto.ProductoID"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
