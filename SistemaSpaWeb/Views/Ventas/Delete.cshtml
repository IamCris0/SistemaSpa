@model SistemaSpaWeb.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash"></i> Eliminar Venta
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Está seguro de que desea eliminar esta venta?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">ID Venta</dt>
                        <dd class="col-sm-8">@Model.VentaID</dd>

                        <dt class="col-sm-4">Fecha</dt>
                        <dd class="col-sm-8">@Model.FechaVenta?.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Cliente</dt>
                        <dd class="col-sm-8">
                            @if (Model.Cliente != null)
                            {
                                <span>@Model.Cliente.Nombre @Model.Cliente.Apellido</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Empleado</dt>
                        <dd class="col-sm-8">
                            @if (Model.Empleado != null)
                            {
                                <span>@Model.Empleado.Nombre @Model.Empleado.Apellido</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Total</dt>
                        <dd class="col-sm-8">
                            <strong class="text-success fs-5">$@(Model.Total?.ToString("N2") ?? "0.00")</strong>
                        </dd>

                        <dt class="col-sm-4">Productos</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@(Model.DetalleVentas?.Count ?? 0) producto(s)</span>
                        </dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Estado == "Completada" ? "bg-success" : "bg-warning")">
                                @Model.Estado
                            </span>
                        </dd>
                    </dl>

                    @{
                        var tieneDetalles = (Model.DetalleVentas?.Count ?? 0) > 0;
                    }

                    @if (tieneDetalles)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i>
                            <strong>Esta venta NO puede ser eliminada</strong> porque tiene productos asociados.
                            <br />
                            Debe eliminar primero los @Model.DetalleVentas.Count producto(s) de la venta.
                        </div>
                    }

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="VentaID" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            @if (!tieneDetalles)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
