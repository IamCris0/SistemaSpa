@model IEnumerable<SistemaSpaWeb.Models.ClienteMembresia>

@{
    ViewData["Title"] = "Clientes con Membresía";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-card-list"></i> Gestión de Membresías de Clientes
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Membresía
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Cliente</th>
                            <th>Membresía</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Estado</th>
                            <th>Fecha Registro</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ClienteMembresiaID</td>

                                <td>
                                    @if (item.Cliente != null)
                                    {
                                        <span>@item.Cliente.Nombre @item.Cliente.Apellido</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin cliente</span>
                                    }
                                </td>

                                <td>
                                    @if (item.Membresia != null)
                                    {
                                        <span class="badge bg-info">@item.Membresia.NombreMembresia</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin membresía</span>
                                    }
                                </td>

                                <td>
                                    @(item.FechaInicio.HasValue
                                        ? item.FechaInicio.Value.ToString("dd/MM/yyyy")
                                        : "—")
                                </td>

                                <td>
                                    @(item.FechaFin.HasValue
                                        ? item.FechaFin.Value.ToString("dd/MM/yyyy")
                                        : "—")
                                </td>

                                <td>
                                    @{
                                        var badgeClass = item.EstadoMembresia switch
                                        {
                                            "Activa" => "bg-success",
                                            "Vencida" => "bg-danger",
                                            "Suspendida" => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">
                                        @item.EstadoMembresia
                                    </span>
                                </td>

                                <td>
                                    @(item.FechaRegistro.HasValue
                                        ? item.FechaRegistro.Value.ToString("dd/MM/yyyy")
                                        : "—")
                                </td>

                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.ClienteMembresiaID"
                                       class="btn btn-sm btn-info" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ClienteMembresiaID"
                                       class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ClienteMembresiaID"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>