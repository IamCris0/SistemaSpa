@model SistemaSpaWeb.Models.ClienteMembresia

@{
    ViewData["Title"] = "Editar Membresía";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil"></i> Editar Membresía del Cliente
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="ClienteMembresiaID" />
                        <input type="hidden" asp-for="FechaRegistro" />

                        <!-- Cliente -->
                        <div class="mb-3">
                            <label asp-for="ClienteID" class="form-label">
                                <i class="bi bi-person"></i> Cliente *
                            </label>
                            <select asp-for="ClienteID" class="form-select" asp-items="ViewBag.ClienteID">
                                <option value="">-- Seleccione un cliente --</option>
                            </select>
                            <span asp-validation-for="ClienteID" class="text-danger"></span>
                        </div>

                        <!-- Membresía -->
                        <div class="mb-3">
                            <label asp-for="MembresiaID" class="form-label">
                                <i class="bi bi-card-heading"></i> Membresía *
                            </label>
                            <select asp-for="MembresiaID" class="form-select" asp-items="ViewBag.MembresiaID">
                                <option value="">-- Seleccione una membresía --</option>
                            </select>
                            <span asp-validation-for="MembresiaID" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Fecha Inicio -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaInicio" class="form-label">
                                    <i class="bi bi-calendar"></i> Fecha de Inicio *
                                </label>
                                <input asp-for="FechaInicio" type="date" class="form-control" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>

                            <!-- Fecha Fin -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaFin" class="form-label">
                                    <i class="bi bi-calendar-check"></i> Fecha de Fin
                                </label>
                                <input asp-for="FechaFin" type="date" class="form-control" />
                                <span asp-validation-for="FechaFin" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado -->
                        <div class="mb-3">
                            <label asp-for="EstadoMembresia" class="form-label">
                                <i class="bi bi-info-circle"></i> Estado de la Membresía
                            </label>
                            <select asp-for="EstadoMembresia" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="Activa">Activa</option>
                                <option value="Suspendida">Suspendida</option>
                                <option value="Vencida">Vencida</option>
                            </select>
                            <span asp-validation-for="EstadoMembresia" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> Modificar las fechas puede afectar la vigencia de la membresía.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
