@model SistemaSpaWeb.Models.ClienteMembresia

@{
    ViewData["Title"] = "Asignar Membresía";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Asignar Membresía a Cliente
                    </h2>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Cliente -->
                        <div class="mb-3">
                            <label asp-for="ClienteID" class="form-label">
                                <i class="bi bi-person"></i> Cliente *
                            </label>
                            <select asp-for="ClienteID" class="form-select" asp-items="ViewBag.ClienteID">
                                <option value="">-- Seleccione un cliente --</option>
                            </select>
                            <span asp-validation-for="ClienteID" class="text-danger"></span>
                        </div>

                        <!-- Membresía -->
                        <div class="mb-3">
                            <label asp-for="MembresiaID" class="form-label">
                                <i class="bi bi-card-heading"></i> Membresía *
                            </label>
                            <select asp-for="MembresiaID" class="form-select" asp-items="ViewBag.MembresiaID">
                                <option value="">-- Seleccione una membresía --</option>
                            </select>
                            <span asp-validation-for="MembresiaID" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <!-- Fecha Inicio -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaInicio" class="form-label">
                                    <i class="bi bi-calendar"></i> Fecha de Inicio *
                                </label>
                                <input asp-for="FechaInicio" type="date" class="form-control" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>

                            <!-- Fecha Fin -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaFin" class="form-label">
                                    <i class="bi bi-calendar-check"></i> Fecha de Fin
                                </label>
                                <input asp-for="FechaFin" type="date" class="form-control" />
                                <span asp-validation-for="FechaFin" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Estado -->
                        <div class="mb-3">
                            <label asp-for="EstadoMembresia" class="form-label">
                                <i class="bi bi-info-circle"></i> Estado de la Membresía
                            </label>
                            <select asp-for="EstadoMembresia" class="form-select">
                                <option value="">-- Seleccione --</option>
                                <option value="Activa" selected>Activa</option>
                                <option value="Suspendida">Suspendida</option>
                                <option value="Vencida">Vencida</option>
                            </select>
                            <span asp-validation-for="EstadoMembresia" class="text-danger"></span>
                        </div>

                        <!-- Fecha Registro -->
                        <div class="mb-3">
                            <label asp-for="FechaRegistro" class="form-label">
                                <i class="bi bi-clock-history"></i> Fecha de Registro
                            </label>
                            <input asp-for="FechaRegistro" type="date" class="form-control" readonly />
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> La membresía se activará según las fechas configuradas.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const today = new Date().toISOString().split('T')[0];

            // Fecha mínima hoy
            document.querySelectorAll('input[type="date"]').forEach(input => {
                if (!input.hasAttribute('readonly')) {
                    input.setAttribute('min', today);
                }
            });

            // Fecha de registro automática
            const fechaRegistro = document.querySelector('[name="FechaRegistro"]');
            if (fechaRegistro) {
                fechaRegistro.value = today;
            }
        });
    </script>
}
