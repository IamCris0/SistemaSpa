@model IEnumerable<SistemaSpaWeb.Models.CategoriasServicios>

@{
    ViewData["Title"] = "Categorías de Servicios";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-tags"></i> Categorías de Servicios
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Categoría
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Servicios</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var categoria in Model)
                        {
                            <tr>
                                <td>@categoria.CategoriaID</td>
                                <td><strong>@categoria.NombreCategoria</strong></td>
                                <td>@(categoria.Descripcion ?? "Sin descripción")</td>
                                <td>
                                    <span class="badge bg-primary">
                                        @(categoria.Servicios?.Count ?? 0)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(categoria.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                        @categoria.Estado
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@categoria.CategoriaID"
                                       class="btn btn-sm btn-info" title="Ver Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@categoria.CategoriaID"
                                       class="btn btn-sm btn-warning" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@categoria.CategoriaID"
                                       class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>