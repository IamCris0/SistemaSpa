@model SistemaSpaWeb.Models.Proveedor

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Eliminar Proveedor</h5>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold">
                ¿Está seguro que desea eliminar este proveedor?
            </p>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Proveedor:</strong> @Model.NombreProveedor</li>
                <li class="list-group-item"><strong>Contacto:</strong> @Model.Contacto</li>
                <li class="list-group-item"><strong>Estado:</strong> @Model.Estado</li>
            </ul>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ProveedorID" />

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
