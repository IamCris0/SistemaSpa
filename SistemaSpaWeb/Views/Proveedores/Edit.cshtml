@model SistemaSpaWeb.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning">
            <h5 class="mb-0">Editar Proveedor</h5>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="ProveedorID" />

                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="NombreProveedor" class="form-label"></label>
                        <input asp-for="NombreProveedor" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Contacto" class="form-label"></label>
                        <input asp-for="Contacto" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Estado" class="form-label"></label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                    </div>

                    <div class="col-12">
                        <label asp-for="Direccion" class="form-label"></label>
                        <textarea asp-for="Direccion" class="form-control" rows="2"></textarea>
                    </div>

                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-pencil-square"></i> Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
