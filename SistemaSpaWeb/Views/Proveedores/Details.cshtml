@model SistemaSpaWeb.Models.Proveedor

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Detalle del Proveedor</h5>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Proveedor</dt>
                <dd class="col-sm-8">@Model.NombreProveedor</dd>

                <dt class="col-sm-4">Contacto</dt>
                <dd class="col-sm-8">@Model.Contacto</dd>

                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Dirección</dt>
                <dd class="col-sm-8">@Model.Direccion</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                        @Model.Estado
                    </span>
                </dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.ProveedorID" class="btn btn-warning">
                    Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
