@model SistemaSpaWeb.Models.GastoOperativo
@{
    ViewData["Title"] = "Detalles del Gasto";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0"><i class="bi bi-info-circle"></i> Detalles del Gasto</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">ID Gasto</dt>
                        <dd class="col-sm-8">@Model.GastoID</dd>
                        <dt class="col-sm-4">Proveedor</dt>
                        <dd class="col-sm-8">@Model.Proveedor?.NombreProveedor</dd>
                        <dt class="col-sm-4">Tipo de Gasto</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary">@Model.TipoGasto</span></dd>
                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        <dt class="col-sm-4">Monto</dt>
                        <dd class="col-sm-8"><strong class="text-danger fs-5">$@(Model.Monto?.ToString("N2") ?? "0.00")</strong></dd>
                        <dt class="col-sm-4">Fecha del Gasto</dt>
                        <dd class="col-sm-8">@Model.FechaGasto?.ToString("dd/MM/yyyy HH:mm")</dd>
                        <dt class="col-sm-4">Método de Pago</dt>
                        <dd class="col-sm-8">@Model.MetodoPago</dd>
                        <dt class="col-sm-4">Comprobante</dt>
                        <dd class="col-sm-8">@Model.Comprobante</dd>
                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Estado == "Pagado" ? "bg-success" : "bg-warning text-dark")">@Model.Estado</span>
                        </dd>
                        <dt class="col-sm-4">Fecha Registro</dt>
                        <dd class="col-sm-8"><small class="text-muted">@Model.FechaRegistro?.ToString("dd/MM/yyyy HH:mm")</small></dd>
                    </dl>
                    <hr />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Volver</a>
                        <a asp-action="Edit" asp-route-id="@Model.GastoID" class="btn btn-warning"><i class="bi bi-pencil"></i> Editar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>