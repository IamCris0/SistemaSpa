@model SistemaSpaWeb.Models.GastoOperativo
@{
    ViewData["Title"] = "Eliminar Gasto";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="bi bi-trash"></i> Eliminar Gasto</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Está seguro de que desea eliminar este gasto?</strong>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.GastoID</dd>
                        <dt class="col-sm-4">Tipo</dt>
                        <dd class="col-sm-8">@Model.TipoGasto</dd>
                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        <dt class="col-sm-4">Monto</dt>
                        <dd class="col-sm-8"><strong class="text-danger fs-5">$@(Model.Monto?.ToString("N2") ?? "0.00")</strong></dd>
                        <dt class="col-sm-4">Fecha</dt>
                        <dd class="col-sm-8">@Model.FechaGasto?.ToString("dd/MM/yyyy")</dd>
                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8"><span class="badge @(Model.Estado == "Pagado" ? "bg-success" : "bg-warning")">@Model.Estado</span></dd>
                    </dl>
                    <hr />
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="GastoID" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancelar</a>
                            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>