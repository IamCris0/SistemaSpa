@model IEnumerable<SistemaSpaWeb.Models.GastoOperativo>

@{
    ViewData["Title"] = "Gastos Operativos";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-cash-stack"></i> Gastos Operativos
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Gasto
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Descripción</th>
                            <th>Proveedor</th>
                            <th>Monto</th>
                            <th>Método Pago</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var gasto in Model)
                        {
                            <tr>
                                <td>@gasto.GastoID</td>
                                <td>@gasto.FechaGasto?.ToString("dd/MM/yyyy")</td>
                                <td><span class="badge bg-secondary">@gasto.TipoGasto</span></td>
                                <td>@gasto.Descripcion</td>
                                <td>@gasto.Proveedor?.NombreProveedor</td>
                                <td><strong class="text-danger">$@(gasto.Monto?.ToString("N2") ?? "0.00")</strong></td>
                                <td>@gasto.MetodoPago</td>
                                <td>
                                    <span class="badge @(gasto.Estado == "Pagado" ? "bg-success" : "bg-warning text-dark")">
                                        @gasto.Estado
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@gasto.GastoID" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@gasto.GastoID" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@gasto.GastoID" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
