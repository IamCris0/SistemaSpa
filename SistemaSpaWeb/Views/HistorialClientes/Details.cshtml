@model SistemaSpaWeb.Models.HistorialCliente

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="bi bi-eye"></i> Detalle del Historial
            </h5>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Cliente</dt>
                <dd class="col-sm-8">@Model.Cliente?.Nombre @Model.Cliente?.Apellido</dd>

                <dt class="col-sm-4">Fecha Visita</dt>
                <dd class="col-sm-8">@Model.FechaVisita?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Calificación</dt>
                <dd class="col-sm-8">⭐ @Model.Calificacion / 5</dd>

                <dt class="col-sm-4">Alergias</dt>
                <dd class="col-sm-8">@Model.AlergiasProcedimiento</dd>

                <dt class="col-sm-4">Resultados</dt>
                <dd class="col-sm-8">@Model.ResultadosTratamiento</dd>

                <dt class="col-sm-4">Observaciones</dt>
                <dd class="col-sm-8">@Model.Observaciones</dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.HistorialID" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>
