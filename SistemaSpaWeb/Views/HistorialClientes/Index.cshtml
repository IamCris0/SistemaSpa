@model IEnumerable<SistemaSpaWeb.Models.HistorialCliente>

@{
    ViewData["Title"] = "Historial de Clientes";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-journal-medical"></i> Historial de Clientes
            </h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Nuevo Historial
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light text-center">
                    <tr>
                        <th>Cliente</th>
                        <th>Fecha Visita</th>
                        <th>Calificación</th>
                        <th>Fecha Registro</th>
                        <th style="width:180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cliente?.Nombre @item.Cliente?.Apellido</td>
                            <td class="text-center">@item.FechaVisita?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <span class="badge bg-warning text-dark">
                                    ⭐ @item.Calificacion / 5
                                </span>
                            </td>
                            <td class="text-center">@item.FechaRegistro?.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.HistorialID" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.HistorialID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.HistorialID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
