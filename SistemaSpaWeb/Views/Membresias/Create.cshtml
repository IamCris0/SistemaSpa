@model SistemaSpaWeb.Models.Membresia

@{
    ViewData["Title"] = "Nueva Membresía";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i> Registrar Membresía
            </h5>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="NombreMembresia" class="form-label"></label>
                        <input asp-for="NombreMembresia" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DuracionMeses" class="form-label"></label>
                        <input asp-for="DuracionMeses" type="number" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Precio" class="form-label"></label>
                        <input asp-for="Precio" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Descuento" class="form-label"></label>
                        <input asp-for="Descuento" class="form-control" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Estado" class="form-label"></label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activa">Activa</option>
                            <option value="Inactiva">Inactiva</option>
                        </select>
                    </div>

                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
