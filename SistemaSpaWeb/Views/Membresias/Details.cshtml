@model SistemaSpaWeb.Models.Membresia

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="bi bi-eye"></i> Detalle de la Membresía
            </h5>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.NombreMembresia</dd>

                <dt class="col-sm-4">Duración</dt>
                <dd class="col-sm-8">@Model.DuracionMeses meses</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">$@Model.Precio?.ToString("N2")</dd>

                <dt class="col-sm-4">Descuento</dt>
                <dd class="col-sm-8">@Model.Descuento %</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@Model.Estado</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.MembresiaID" class="btn btn-warning">Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>
