@model IEnumerable<SistemaSpaWeb.Models.Membresia>

@{
    ViewData["Title"] = "Membresías";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="bi bi-card-checklist"></i> Membresías
            </h5>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Nueva Membresía
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Nombre</th>
                        <th>Duración</th>
                        <th>Precio</th>
                        <th>Descuento</th>
                        <th>Estado</th>
                        <th style="width:180px;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.NombreMembresia</strong></td>
                            <td class="text-center">@item.DuracionMeses meses</td>
                            <td class="text-end">$@item.Precio?.ToString("N2")</td>
                            <td class="text-center">
                                <span class="badge bg-info">@item.Descuento %</span>
                            </td>
                            <td class="text-center">
                                @{
                                    var badge = item.Estado == "Activa" ? "bg-success" : "bg-secondary";
                                }
                                <span class="badge @badge">@item.Estado</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.MembresiaID" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.MembresiaID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MembresiaID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
