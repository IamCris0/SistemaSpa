@model SistemaSpaWeb.Models.Compra

@{
    ViewData["Title"] = "Eliminar Compra";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2><i class="bi bi-trash"></i> Eliminar Compra</h2>
        </div>
        <div class="card-body">
            <h5 class="text-danger">
                ¿Está seguro que desea eliminar esta compra?
            </h5>

            <dl class="row">
                <dt class="col-sm-3">Proveedor</dt>
                <dd class="col-sm-9">@Model.Proveedor?.NombreProveedor</dd>

                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.FechaCompra?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">$ @Model.Total</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Model.EstadoCompra</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="CompraID" />
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
