@model SistemaSpaWeb.Models.Compra

@{
    ViewData["Title"] = "Detalle de Compra";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2><i class="bi bi-eye"></i> Detalle de Compra</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Proveedor</dt>
                <dd class="col-sm-9">@Model.Proveedor?.NombreProveedor</dd>

                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.FechaCompra?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">$ @Model.Total</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@Model.EstadoCompra</dd>

                <dt class="col-sm-3">Observaciones</dt>
                <dd class="col-sm-9">@Model.Observaciones</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.CompraID" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>
