@model IEnumerable<SistemaSpaWeb.Models.Compra>

@{
    ViewData["Title"] = "Compras";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-cart"></i> Compras</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nueva Compra
        </a>
    </div>

    <table class="table table-bordered table-hover shadow">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Proveedor</th>
                <th>Fecha</th>
                <th>Total</th>
                <th>Estado</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CompraID</td>
                    <td>@item.Proveedor?.NombreProveedor</td>
                    <td>@item.FechaCompra?.ToString("dd/MM/yyyy")</td>
                    <td>$ @item.Total</td>
                    <td>@item.EstadoCompra</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.CompraID" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.CompraID" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.CompraID" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
