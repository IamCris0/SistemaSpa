@model SistemaSpaWeb.Models.DetalleCita

@{
    ViewData["Title"] = "Detalle del Servicio";
    var total = Model.PrecioServicio - (Model.PrecioServicio * (Model.Descuento ?? 0) / 100);
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2><i class="bi bi-eye"></i> Detalle del Servicio</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Cita</dt>
                <dd class="col-sm-8">@Model.Cita?.CitaID</dd>

                <dt class="col-sm-4">Servicio</dt>
                <dd class="col-sm-8">@Model.Servicio?.NombreServicio</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">$ @Model.PrecioServicio</dd>

                <dt class="col-sm-4">Descuento</dt>
                <dd class="col-sm-8">@Model.Descuento %</dd>

                <dt class="col-sm-4">Total</dt>
                <dd class="col-sm-8">
                    <strong>$ @total</strong>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model.DetalleCitaID" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>
