@model SistemaSpaWeb.Models.DetalleCita

@{
    ViewData["Title"] = "Eliminar Servicio de la Cita";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <h2><i class="bi bi-trash"></i> Eliminar Servicio</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                ¿Está seguro que desea eliminar este servicio de la cita?
            </div>

            <dl class="row">
                <dt class="col-sm-4">Cita</dt>
                <dd class="col-sm-8">@Model.Cita?.CitaID</dd>

                <dt class="col-sm-4">Servicio</dt>
                <dd class="col-sm-8">@Model.Servicio?.NombreServicio</dd>

                <dt class="col-sm-4">Precio</dt>
                <dd class="col-sm-8">$ @Model.PrecioServicio</dd>

                <dt class="col-sm-4">Descuento</dt>
                <dd class="col-sm-8">@Model.Descuento %</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="DetalleCitaID" />
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
