@model SistemaSpaWeb.Models.DetalleCita

@{
    ViewData["Title"] = "Editar Servicio de la Cita";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil"></i> Editar Servicio de la Cita
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <input type="hidden" asp-for="DetalleCitaID" />

                        <!-- Cita -->
                        <div class="mb-3">
                            <label asp-for="CitaID" class="form-label">
                                <i class="bi bi-calendar-check"></i> Cita
                            </label>
                            <select asp-for="CitaID" class="form-select" asp-items="ViewBag.CitaID">
                                <option value="">-- Seleccione una cita --</option>
                            </select>
                            <span asp-validation-for="CitaID" class="text-danger"></span>
                        </div>

                        <!-- Servicio -->
                        <div class="mb-3">
                            <label asp-for="ServicioID" class="form-label">
                                <i class="bi bi-list-check"></i> Servicio
                            </label>
                            <select asp-for="ServicioID" class="form-select" asp-items="ViewBag.ServicioID">
                                <option value="">-- Seleccione un servicio --</option>
                            </select>
                            <span asp-validation-for="ServicioID" class="text-danger"></span>
                        </div>

                        <!-- Precio -->
                        <div class="mb-3">
                            <label asp-for="PrecioServicio" class="form-label">
                                <i class="bi bi-currency-dollar"></i> Precio del Servicio
                            </label>
                            <input asp-for="PrecioServicio" class="form-control" />
                            <span asp-validation-for="PrecioServicio" class="text-danger"></span>
                        </div>

                        <!-- Descuento -->
                        <div class="mb-3">
                            <label asp-for="Descuento" class="form-label">
                                <i class="bi bi-percent"></i> Descuento (%)
                            </label>
                            <input asp-for="Descuento" class="form-control" />
                            <span asp-validation-for="Descuento" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save"></i> Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
