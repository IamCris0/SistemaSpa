@model SistemaSpaWeb.Models.TurnoEmpleado

@{
    ViewData["Title"] = "Eliminar Turno";
}

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Eliminar Turno</h4>
        </div>

        <div class="card-body">
            <p class="text-danger">
                ¿Estás seguro de eliminar este turno?
            </p>

            <dl class="row">
                <dt class="col-sm-4">Empleado</dt>
                <dd class="col-sm-8">@Model.Empleado?.Nombre</dd>

                <dt class="col-sm-4">Día</dt>
                <dd class="col-sm-8">@Model.DiaSemana</dd>

                <dt class="col-sm-4">Horario</dt>
                <dd class="col-sm-8">@Model.HoraInicio - @Model.HoraFin</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="TurnoID" />
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
