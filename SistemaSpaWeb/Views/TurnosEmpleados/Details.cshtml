@model SistemaSpaWeb.Models.TurnoEmpleado

@{
    ViewData["Title"] = "Detalle del Turno";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4>Detalle del Turno</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Empleado</dt>
                <dd class="col-sm-8">@Model.Empleado?.Nombre</dd>

                <dt class="col-sm-4">DÃ­a</dt>
                <dd class="col-sm-8">@Model.DiaSemana</dd>

                <dt class="col-sm-4">Horario</dt>
                <dd class="col-sm-8">@Model.HoraInicio - @Model.HoraFin</dd>

                <dt class="col-sm-4">Tipo</dt>
                <dd class="col-sm-8">@Model.TipoTurno</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@Model.Estado</dd>

                <dt class="col-sm-4">Registrado</dt>
                <dd class="col-sm-8">@Model.FechaRegistro?.ToString("dd/MM/yyyy")</dd>
            </dl>

            <div class="text-end">
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>
