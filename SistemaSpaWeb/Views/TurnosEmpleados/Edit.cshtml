@model SistemaSpaWeb.Models.TurnoEmpleado

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning">
            <h4>Editar Turno</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="TurnoID" />
                <input type="hidden" asp-for="FechaRegistro" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EmpleadoID" class="form-label"></label>
                        <select asp-for="EmpleadoID" asp-items="ViewBag.EmpleadoID" class="form-select"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DiaSemana" class="form-label"></label>
                        <input asp-for="DiaSemana" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="HoraInicio" class="form-label"></label>
                        <input asp-for="HoraInicio" type="time" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="HoraFin" class="form-label"></label>
                        <input asp-for="HoraFin" type="time" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TipoTurno" class="form-label"></label>
                        <input asp-for="TipoTurno" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" />
                </div>

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
