@model IEnumerable<SistemaSpaWeb.Models.TurnoEmpleado>

@{
    ViewData["Title"] = "Turnos de Empleados";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h4 class="mb-0">Turnos de Empleados</h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Nuevo Turno
            </a>
        </div>

        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Empleado</th>
                        <th>DÃ­a</th>
                        <th>Inicio</th>
                        <th>Fin</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Empleado?.Nombre</td>
                            <td>@item.DiaSemana</td>
                            <td>@item.HoraInicio</td>
                            <td>@item.HoraFin</td>
                            <td>@item.TipoTurno</td>
                            <td>
                                <span class="badge bg-info">@item.Estado</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.TurnoID" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.TurnoID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.TurnoID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
