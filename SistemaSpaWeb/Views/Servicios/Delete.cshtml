@model SistemaSpaWeb.Models.Servicios

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash"></i> Eliminar Servicio
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>¿Está seguro de que desea eliminar este servicio?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">ID Servicio</dt>
                        <dd class="col-sm-8">@Model.ServicioID</dd>

                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8"><strong>@Model.NombreServicio</strong></dd>

                        <dt class="col-sm-4">Categoría</dt>
                        <dd class="col-sm-8">
                            @if (Model.Categoria != null)
                            {
                                <span>@Model.Categoria.NombreCategoria</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Duración</dt>
                        <dd class="col-sm-8">@Model.Duracion minutos</dd>

                        <dt class="col-sm-4">Precio</dt>
                        <dd class="col-sm-8"><strong>$@Model.Precio.ToString("N2")</strong></dd>

                        <dt class="col-sm-4">Citas Asociadas</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@(Model.DetalleCitas?.Count ?? 0)</span>
                        </dd>
                    </dl>

                    @if (Model.DetalleCitas?.Count > 0)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-circle"></i>
                            Este servicio tiene <strong>@Model.DetalleCitas.Count citas</strong> asociadas y no puede ser eliminado.
                        </div>
                    }

                    <hr />

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ServicioID" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            @if (Model.DetalleCitas?.Count == 0)
                            {
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Eliminar
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
