@model SistemaSpaWeb.Models.Sala

@{
    ViewData["Title"] = "Nueva Sala";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i> Registrar Sala
            </h5>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div class="row g-3">

                    <div class="col-md-6">
                        <label asp-for="NombreSala" class="form-label"></label>
                        <input asp-for="NombreSala" class="form-control" />
                        <span asp-validation-for="NombreSala" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TipoSala" class="form-label"></label>
                        <input asp-for="TipoSala" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Capacidad" class="form-label"></label>
                        <input asp-for="Capacidad" class="form-control" type="number" min="1" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label"></label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Disponible">Disponible</option>
                            <option value="Ocupada">Ocupada</option>
                            <option value="Mantenimiento">Mantenimiento</option>
                        </select>
                    </div>

                </div>

                <div class="mt-4 text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
