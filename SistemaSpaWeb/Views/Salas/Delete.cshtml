@model SistemaSpaWeb.Models.Sala

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">
                <i class="bi bi-trash"></i> Eliminar Sala
            </h5>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                ¿Está seguro que desea eliminar esta sala?
            </div>

            <ul class="list-group mb-3">
                <li class="list-group-item"><strong>Nombre:</strong> @Model.NombreSala</li>
                <li class="list-group-item"><strong>Tipo:</strong> @Model.TipoSala</li>
                <li class="list-group-item"><strong>Estado:</strong> @Model.Estado</li>
            </ul>

            <form asp-action="Delete">
                <input type="hidden" asp-for="SalaID" />

                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
