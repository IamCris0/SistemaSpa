@model SistemaSpaWeb.Models.Sala

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">
                <i class="bi bi-eye"></i> Detalle de Sala
            </h5>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.NombreSala</dd>

                <dt class="col-sm-4">Tipo</dt>
                <dd class="col-sm-8">@Model.TipoSala</dd>

                <dt class="col-sm-4">Capacidad</dt>
                <dd class="col-sm-8">@Model.Capacidad</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">
                    <span class="badge @(Model.Estado == "Disponible" ? "bg-success" : "bg-secondary")">
                        @Model.Estado
                    </span>
                </dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.SalaID" class="btn btn-warning">
                    Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
