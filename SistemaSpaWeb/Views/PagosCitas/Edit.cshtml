@model SistemaSpaWeb.Models.PagoCita

@{
    ViewData["Title"] = "Editar Pago";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning">
            <h4>Editar Pago</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="PagoID" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CitaID" class="form-label"></label>
                        <select asp-for="CitaID" asp-items="ViewBag.CitaID" class="form-select"></select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaPago" class="form-label"></label>
                        <input asp-for="FechaPago" type="date" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Monto" class="form-label"></label>
                        <input asp-for="Monto" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MetodoPago" class="form-label"></label>
                        <input asp-for="MetodoPago" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="EstadoPago" class="form-label"></label>
                        <input asp-for="EstadoPago" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Referencia" class="form-label"></label>
                    <input asp-for="Referencia" class="form-control" />
                </div>

                <div class="text-end">
                    <a asp-controller="Citas" asp-action="Details" asp-route-id="@Model.CitaID" class="btn btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-save"></i> Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
