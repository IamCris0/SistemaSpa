@model SistemaSpaWeb.Models.PagoCita

@{
    ViewData["Title"] = "Eliminar Pago";
}

<div class="container mt-4">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h4>Eliminar Pago</h4>
        </div>

        <div class="card-body">
            <p class="text-danger">
                ¿Estás seguro de eliminar este pago?
            </p>

            <dl class="row">
                <dt class="col-sm-4">Cliente</dt>
                <dd class="col-sm-8">@Model.Cita?.Cliente?.Nombre</dd>

                <dt class="col-sm-4">Monto</dt>
                <dd class="col-sm-8">$@Model.Monto</dd>

                <dt class="col-sm-4">Fecha</dt>
                <dd class="col-sm-8">@Model.FechaPago?.ToString("dd/MM/yyyy")</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PagoID" />
                <div class="text-end">
                    <a asp-controller="Citas" asp-action="Details" asp-route-id="@Model.CitaID" class="btn btn-secondary">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
