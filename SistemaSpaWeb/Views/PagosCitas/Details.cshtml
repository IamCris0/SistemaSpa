@model SistemaSpaWeb.Models.PagoCita

@{
    ViewData["Title"] = "Detalle del Pago";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4>Detalle del Pago</h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Cliente</dt>
                <dd class="col-sm-8">@Model.Cita?.Cliente?.Nombre</dd>

                <dt class="col-sm-4">Fecha de Pago</dt>
                <dd class="col-sm-8">@Model.FechaPago?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4">Monto</dt>
                <dd class="col-sm-8">$@Model.Monto</dd>

                <dt class="col-sm-4">MÃ©todo</dt>
                <dd class="col-sm-8">@Model.MetodoPago</dd>

                <dt class="col-sm-4">Referencia</dt>
                <dd class="col-sm-8">@Model.Referencia</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@Model.EstadoPago</dd>
            </dl>

            <div class="text-end">
                <a asp-controller="Citas" asp-action="Details" asp-route-id="@Model.CitaID" class="btn btn-secondary">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
