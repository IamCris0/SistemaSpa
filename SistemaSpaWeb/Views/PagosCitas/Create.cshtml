@model SistemaSpaWeb.Models.PagoCita

@{
    ViewData["Title"] = "Registrar Pago";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4>Registrar Pago</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="CitaID" class="form-label"></label>
                        <select asp-for="CitaID" asp-items="ViewBag.CitaID" class="form-select">
                            <option value="">Seleccione una cita</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaPago" class="form-label"></label>
                        <input asp-for="FechaPago" type="date" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Monto" class="form-label"></label>
                        <input asp-for="Monto" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MetodoPago" class="form-label"></label>
                        <select asp-for="MetodoPago" class="form-select">
                            <option>Efectivo</option>
                            <option>Transferencia</option>
                            <option>Tarjeta</option>
                        </select>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="EstadoPago" class="form-label"></label>
                        <select asp-for="EstadoPago" class="form-select">
                            <option>Pagado</option>
                            <option>Pendiente</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Referencia" class="form-label"></label>
                    <input asp-for="Referencia" class="form-control" />
                </div>

                <div class="text-end">
                    <a asp-controller="Citas" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
