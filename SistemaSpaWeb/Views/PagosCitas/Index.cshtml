@model IEnumerable<SistemaSpaWeb.Models.PagoCita>

@{
    ViewData["Title"] = "Pagos de Citas";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Pagos de Citas</h4>
        </div>

        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Cliente</th>
                        <th>Fecha</th>
                        <th>Monto</th>
                        <th>MÃ©todo</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PagoID</td>
                            <td>@item.Cita?.Cliente?.Nombre</td>
                            <td>@item.FechaPago?.ToString("dd/MM/yyyy")</td>
                            <td>$@item.Monto</td>
                            <td>@item.MetodoPago</td>
                            <td>
                                <span class="badge bg-info">@item.EstadoPago</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.PagoID" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.PagoID" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PagoID" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
