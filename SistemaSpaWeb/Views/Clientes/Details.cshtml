@model SistemaSpaWeb.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-person-circle"></i> Detalles del Cliente
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="bi bi-person-badge"></i> Información Personal</h5>
                            <dl class="row">
                                <dt class="col-sm-5">ID Cliente</dt>
                                <dd class="col-sm-7">@Model.ClienteID</dd>

                                <dt class="col-sm-5">Nombre Completo</dt>
                                <dd class="col-sm-7"><strong>@Model.Nombre @Model.Apellido</strong></dd>

                                <dt class="col-sm-5">Email</dt>
                                <dd class="col-sm-7">
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                </dd>

                                <dt class="col-sm-5">Teléfono</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.Telefono))
                                    {
                                        <a href="tel:@Model.Telefono">@Model.Telefono</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No registrado</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Dirección</dt>
                                <dd class="col-sm-7">@(Model.Direccion ?? "No registrada")</dd>

                                <dt class="col-sm-5">Fecha de Nacimiento</dt>
                                <dd class="col-sm-7">
                                    @if (Model.FechaNacimiento.HasValue)
                                    {
                                        @Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")
                                        <span class="text-muted">(@((DateTime.Now.Year - Model.FechaNacimiento.Value.Year)) años)</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No registrada</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Fecha de Registro</dt>
                                <dd class="col-sm-7">
                                    @if (Model.FechaRegistro.HasValue)
                                    {
                                        @Model.FechaRegistro.Value.ToString("dd/MM/yyyy HH:mm")
                                    }
                                </dd>

                                <dt class="col-sm-5">Estado</dt>
                                <dd class="col-sm-7">
                                    <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-secondary")">
                                        @Model.Estado
                                    </span>
                                </dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="bi bi-graph-up"></i> Estadísticas</h5>
                            <dl class="row">
                                <dt class="col-sm-6">Total de Citas</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-primary fs-6">@(Model.Citas?.Count ?? 0)</span>
                                </dd>

                                <dt class="col-sm-6">Total de Ventas</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-success fs-6">@(Model.Ventas?.Count ?? 0)</span>
                                </dd>

                                <dt class="col-sm-6">Membresías Activas</dt>
                                <dd class="col-sm-6">
                                    <span class="badge bg-warning text-dark fs-6">
                                        @(Model.ClientesMembresias?.Count ?? 0)
                                    </span>
                                </dd>
                            </dl>

                            @if (Model.ClientesMembresias != null && Model.ClientesMembresias.Any())
                            {
                                <h6 class="mt-3"><i class="bi bi-award"></i> Membresías</h6>
                                <ul class="list-group">
                                    @foreach (var cm in Model.ClientesMembresias)
                                    {
                                        <li class="list-group-item">
                                            <strong>@cm.Membresia?.NombreMembresia</strong>
                                            <br />
                                            <small class="text-muted">
                                                @if (cm.FechaInicio.HasValue && cm.FechaFin.HasValue)
                                                {
                                                    <span>
                                                        @cm.FechaInicio.Value.ToString("dd/MM/yyyy") - 
                                                        @cm.FechaFin.Value.ToString("dd/MM/yyyy")
                                                    </span>
                                                }
                                            </small>
                                            <span class="badge @(cm.EstadoMembresia == "Activa" ? "bg-success" : "bg-secondary") float-end">
                                                @cm.EstadoMembresia
                                            </span>
                                        </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Volver al Listado
                        </a>
                        <a asp-controller="Citas" asp-action="Create" asp-route-clienteId="@Model.ClienteID" 
                           class="btn btn-primary">
                            <i class="bi bi-calendar-plus"></i> Nueva Cita
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.ClienteID" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
