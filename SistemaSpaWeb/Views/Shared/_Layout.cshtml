<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema SPA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-spa"></i> Sistema SPA
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Inicio
                            </a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-people"></i> Clientes
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Clientes" asp-action="Index">
                                        <i class="bi bi-person-badge"></i> Gestión de Clientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="ClientesMembresias" asp-action="Index">
                                        <i class="bi bi-card-checklist"></i> Membresías de Clientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="HistorialClientes" asp-action="Index">
                                        <i class="bi bi-clock-history"></i> Historial de Clientes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Citas" asp-action="Index">
                                        <i class="bi bi-clock-history"></i> Gestion de Citas
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-calendar-check"></i> Operaciones
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Citas" asp-action="Index">
                                        <i class="bi bi-calendar-event"></i> Citas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="PagosCitas" asp-action="Index">
                                        <i class="bi bi-cash-coin"></i> Pagos de Citas
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Ventas" asp-action="Index">
                                        <i class="bi bi-cart"></i> Ventas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Compras" asp-action="Index">
                                        <i class="bi bi-bag"></i> Compras
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear"></i> Servicios
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="CategoriasServicios" asp-action="Index">
                                        <i class="bi bi-tags"></i> Categorías
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Servicios" asp-action="Index">
                                        <i class="bi bi-flower1"></i> Servicios
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Membresias" asp-action="Index">
                                        <i class="bi bi-award"></i> Membresías
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-box-seam"></i> Inventario
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Productos" asp-action="Index">
                                        <i class="bi bi-box"></i> Productos
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Proveedores" asp-action="Index">
                                        <i class="bi bi-truck"></i> Proveedores
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-building"></i> Administración
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" asp-controller="Empleados" asp-action="Index">
                                        <i class="bi bi-person-workspace"></i> Empleados
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Salas" asp-action="Index">
                                        <i class="bi bi-door-open"></i> Salas
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="TurnosEmpleados" asp-action="Index">
                                        <i class="bi bi-clock"></i> Turnos
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="GastosOperativos" asp-action="Index">
                                        <i class="bi bi-receipt-cutoff"></i> Gastos Operativos
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Sistema de Gestión SPA - Todos los derechos reservados
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
