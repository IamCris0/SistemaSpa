@model SistemaSpaWeb.Models.DetalleCompra

@{
    ViewData["Title"] = "Eliminar Detalle de Compra";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-trash"></i> Eliminar Detalle
                    </h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        ¿Está seguro de eliminar este detalle?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Producto</dt>
                        <dd class="col-sm-8">@Model.Producto?.NombreProducto</dd>

                        <dt class="col-sm-4">Cantidad</dt>
                        <dd class="col-sm-8">@Model.Cantidad</dd>

                        <dt class="col-sm-4">Subtotal</dt>
                        <dd class="col-sm-8">$@Model.Subtotal?.ToString("N2")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="DetalleCompraID" />
                        <div class="text-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
