@model SistemaSpaWeb.Models.DetalleCompra

@{
    ViewData["Title"] = "Detalle de Compra";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h2 class="mb-0">
                <i class="bi bi-eye"></i> Detalle de Compra
            </h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Compra</dt>
                <dd class="col-sm-8">#@Model.CompraID</dd>

                <dt class="col-sm-4">Producto</dt>
                <dd class="col-sm-8">@Model.Producto?.NombreProducto</dd>

                <dt class="col-sm-4">Cantidad</dt>
                <dd class="col-sm-8">@Model.Cantidad</dd>

                <dt class="col-sm-4">Precio Unitario</dt>
                <dd class="col-sm-8">$@Model.PrecioUnitario?.ToString("N2")</dd>

                <dt class="col-sm-4">Subtotal</dt>
                <dd class="col-sm-8 fw-bold">$@Model.Subtotal?.ToString("N2")</dd>
            </dl>

            <div class="text-end">
                <a asp-action="Edit" asp-route-id="@Model.DetalleCompraID" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    Volver
                </a>
            </div>
        </div>
    </div>
</div>
