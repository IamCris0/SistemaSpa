@{
    ViewData["Title"] = "Inicio";
}

<div class="text-center mb-5">
    <h1 class="display-4">Bienvenido al Sistema de Gestión del SPA</h1>
    <p class="lead">Administra tu spa de manera eficiente con ASP.NET Core MVC y Entity Framework</p>
</div>

<div class="row mt-5">
    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-calendar-check" style="font-size: 3rem; color: #0d6efd;"></i>
                <h5 class="card-title mt-3">Gestión de Citas</h5>
                <p class="card-text">Administra citas, servicios y pagos</p>
                <a asp-controller="Citas" asp-action="Index" class="btn btn-primary">
                    Ver Citas
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-people" style="font-size: 3rem; color: #198754;"></i>
                <h5 class="card-title mt-3">Clientes</h5>
                <p class="card-text">Gestiona clientes y membresías</p>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-success">
                    Ver Clientes
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-flower1" style="font-size: 3rem; color: #fd7e14;"></i>
                <h5 class="card-title mt-3">Servicios</h5>
                <p class="card-text">Administra servicios del spa</p>
                <a asp-controller="Servicios" asp-action="Index" class="btn btn-warning">
                    Ver Servicios
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-box-seam" style="font-size: 3rem; color: #6610f2;"></i>
                <h5 class="card-title mt-3">Inventario</h5>
                <p class="card-text">Control de productos y compras</p>
                <a asp-controller="Productos" asp-action="Index" class="btn btn-purple">
                    Ver Productos
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-person-workspace" style="font-size: 3rem; color: #20c997;"></i>
                <h5 class="card-title mt-3">Empleados</h5>
                <p class="card-text">Gestiona personal y turnos</p>
                <a asp-controller="Empleados" asp-action="Index" class="btn btn-info">
                    Ver Empleados
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card text-center shadow-sm h-100">
            <div class="card-body">
                <i class="bi bi-cart" style="font-size: 3rem; color: #dc3545;"></i>
                <h5 class="card-title mt-3">Ventas</h5>
                <p class="card-text">Registro de ventas de productos</p>
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-danger">
                    Ver Ventas
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-info-circle"></i> Características del Sistema
                </h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <i class="bi bi-check-circle text-success"></i> Gestión completa de citas y servicios
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-check-circle text-success"></i> Control de clientes y membresías
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-check-circle text-success"></i> Inventario de productos
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-check-circle text-success"></i> Administración de empleados y turnos
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-check-circle text-success"></i> Registro de pagos y ventas
                    </li>
                    <li class="list-group-item">
                        <i class="bi bi-check-circle text-success"></i> Historial de clientes
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-link-45deg"></i> Accesos Rápidos
                </h5>
                <div class="d-grid gap-2">
                    <a asp-controller="Citas" asp-action="Create" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle"></i> Nueva Cita
                    </a>
                    <a asp-controller="Clientes" asp-action="Create" class="btn btn-outline-success">
                        <i class="bi bi-plus-circle"></i> Nuevo Cliente
                    </a>
                    <a asp-controller="Ventas" asp-action="Create" class="btn btn-outline-danger">
                        <i class="bi bi-plus-circle"></i> Nueva Venta
                    </a>
                    <a asp-controller="Salas" asp-action="Index" class="btn btn-outline-info">
                        <i class="bi bi-door-open"></i> Ver Salas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-purple {
        color: #fff;
        background-color: #6610f2;
        border-color: #6610f2;
    }
    .btn-purple:hover {
        background-color: #560bd0;
        border-color: #510bc4;
    }
</style>